<div class="row">
	<form {{action 'updateZip' model on="submit"}} class=" col-md-12">
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
				  <label for="zipcode">City</label>
				  {{input value=model.zip class="form-control"}}
				  <button type="submit" class="btn btn-default">Update</button>
				</div>
			</div>
		</div>
	</form>
</div>

{{weather-app weather=model}}